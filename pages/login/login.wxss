/* pages/login/login.wxss */
 @import "../../lib/weui.wxss";

.page-section{
  margin-bottom: 20rpx;
}

.container{
  width: 100%;
  height: 100%;
  background: #F3F3F3;
}

.content{
  width: 100%;
  height: 200rpx;
  background: #fff;
  margin-top:40rpx; 
}

.phoneNumber{
  width: 92%;
  margin: 0rpx 4%;
  height: 100rpx;
  border-bottom: 1px solid #EEEEEE;
}

.verificationCode{
  width: 92%;
  margin: 0rpx 4%;
  height: 100rpx;
}

.p_m_title{
  line-height: 100rpx;
  color: #000000;
  font-size: 30rpx;
  margin-right: 30rpx; 
  float: left;
}
.p_m_value{
  line-height: 100rpx;
  height: 100rpx;
  font-size: 30rpx;
}
.v_c_value{
  line-height: 100rpx;
  height: 100rpx;
  font-size: 30rpx;
  float: left;
}

.get_v_c{
  padding: 0 40rpx;
  height: 75rpx;
  float: right;
  font-size: 30rpx;
  line-height: 75rpx;
  margin-top: 12.5rpx;
  border-radius: 75rpx;
  border: 1px solid #FC5500;
  color: #FC5500;
}

.login{
  margin-top: 100rpx;
  width: 90%;
  background: #27B8F3;
  border-width: 0rpx;
  color: #fff;
  font-size: 35rpx;
  line-height: 100rpx;
  height: 100rpx;
}